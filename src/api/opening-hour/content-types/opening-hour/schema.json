{
  "kind": "collectionType",
  "collectionName": "opening_hours",
  "info": {
    "singularName": "opening-hour",
    "pluralName": "opening-hours",
    "displayName": "Opening Hour"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "day": {
      "type": "enumeration",
      "enum": [
        "sunday",
        "monday",
        "tuesday",
        "wednesday",
        "thursday",
        "friday",
        "saturday"
      ],
      "required": true,
      "unique": true
    },
    "day_number": {
      "type": "integer",
      "min": 0,
      "max": 6,
      "required": true
    },
    "open": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "hours": {
      "type": "string",
      "required": false,
      "default": "Closed",
      "maxLength": 50
    },
    "opening_time": {
      "type": "time",
      "required": false
    },
    "closing_time": {
      "type": "time",
      "required": false
    }
  }
}
